  <!-- Header and Nav -->

  <div class="row">
      <h1>ZipReel Documentation</h1>
	  <h4 class="subheader"> Everything you need to know</h4>
	  <hr />
  </div>

  <!-- End Header and Nav -->

  <div class="row">

    <!-- Main Content Section -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="nine columns push-three">

      <h3><%= @documentation.title %></h3>

      <p> <%= @documentation.rendered_content.html_safe %> </p>


      <%= link_to 'Edit', edit_documentation_path(@documentation) %> |
		  <%= link_to 'Back', documentations_path %>


    </div>


    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="three columns pull-nine panel">

      <ul class="side-nav">
        <% @documents.each do |document| %>
				  <% if document == @documentation %>
					  <li><%= link_to(document.title, documentation_permalink(document)) %></li>
				  <% else %>
					  <li><%= link_to(document.title, documentation_permalink(document)) %></li>
				  <% end %>
			<% end %>

      </ul>


    </div>

  </div>




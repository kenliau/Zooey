  <!-- header -->

  <div class="row">
    <div class="seven columns">
      <h1><%= @video.video_name %></h1>
    </div>
  </div>
  <!-- end header -->

  <div class="row">
    <div class="twelve columns">
      <ul class="block-grid two-up mobile-one-up">
        <li>
          <div class="flex-video">
            <iframe width="420" height="315" src="<%= @video.location %>" frameborder="0" allowfullscreen></iframe>
          </div>
        </li>
        <li>
          <table id="video-table" class="twelve columns">
            <tbody>
              <tr>
                <td>Filename :</td>
                <td><%= @video.video_name %></td>
              </tr>
              <tr>
                <td>Size :</td>
                <td><%= number_to_human_size(@video.size) %></td>
              </tr>
              <tr>
                <td>Width :</td>
                <td><%= @video.width || '-'  %></td>
              </tr>
              <tr>
                <td>Height :</td>
                <td><%= @video.height || '-'  %></td>
              </tr>

              <tr>
                <td>Duration :</td>
                <td><%= @video.duration %> seconds </td>
              </tr>
              <tr>
                <td>Location :</td>
                <td><a href="<%= @video.location %>"> <%= @video.filename %> </a></td>
              </tr>
              <tr>
                <td>Audio Bitrate :</td>
                <td><%= @video.audio_bitrate || '-' %></td>
              </tr>
              <tr>
                <td>Audio Codec :</td>
                <td><%= @video.audio_codec || '-' %></td>
              </tr>
               <tr>
                <td>Frames/sec :</td>
                <td><%= @video.frames_per_sec || '-' %></td>
              </tr>
              <tr>
                <td>Created At :</td>
                <td><%= @video.created_at %></td>
              </tr>
            </tbody>
          </table>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
  </div>


 

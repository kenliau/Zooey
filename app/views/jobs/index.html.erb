





<div class="row">
  <div class="twelve columns">
    <h2>Listing Jobs</h2>
    <hr />
  </div>
</div>

<script id="progressBarTemplate" type="text/template">
  <span style="width: {{= chunks_tcoded_so_far }}%;" class="meter"></span> 
  <span id="job-data" data-job-id="{{= id }}"></span>
</script>

<script id="jobDetailsTemplate" type="text/template">
  <td>{{= id }}</td>
  <td class="will be progress bar"></td>
  <td>{{= width }}</td>
  <td>{{= height }}</td>
  <td>*</td>
  <td>*</td>
</script>



<div class="row">
  <table id="jobs-table" class="twelve columns">
    <thead>
      <tr>
        <td>Job ID</td>
        <td>Status</td>
        <td>Width</td>
        <td>Height</td>
        <td>*</td>
        <td>*</td>
      </tr>
    </thead>
  </table>
</div>

<div class="row progress-bar">
</div>

<hr />

<div class="row">

  <table>
    <tr>
      <th>Video Filename</th>
      <th>Width</th>
      <th>Height</th>
      <th></th>
    </tr>

    <% @jobs.each do |job| %>
      <tr>
      <% @video = Video.find(job.video_id) %>
      <td><%= @video.filename %></td>
      <td><%= job.width %></td>
      <td><%= job.height %></td>
      <td><%= link_to 'Show', job %></td>
      <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>
  </table>

  <br />

  <%= link_to 'New Video', new_video_path %>

</div>

<div class="row">
  <div class="six columns centered">
    <h2>Sign Up</h2>
    <hr />
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <% resource.errors.full_messages.each do |msg| %>
          <div class="alert alert-box">
            <%= msg %>
            <a href="" class="close">&times;</a>
          </div>
        <% end %>
      </div>
    <% end %> 
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :email %></div>
      </div>
      <div class="eight columns">
        <div><%= f.email_field :email, :autofocus => true %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :first_name %></div>
      </div>
      <div class="eight columns">
        <div><%= f.text_field :first_name %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :last_name %></div>
      </div>
      <div class="eight columns">
        <div><%= f.text_field :last_name %></div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :password %></div>
      </div>
      <div class="eight columns">
        <div><%= f.password_field :password %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :password_confirmation %></div>
      </div>
      <div class="eight columns">
        <div><%= f.password_field :password_confirmation %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="six columns centered">
      <div class="four columns">
        <div><%= f.label :membership %></div>
        <span class="subheader">must be 0, 1, or 2</span>
      </div>
      <div class="eight columns">
        <div><%= f.select :membership, options_for_select([['Gold', 0], ['Silver', 1], ['Bronze', 2]]) %></div> 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="six columns centered">
      <div class="twelve columns">
        <div><%= f.submit "Sign Up", :class => " radius button", :style => "float: right" %></div>
      </div>
    </div>
  </div>

<% end %>

<div class="row">
  <div class="six columns centered">
    <div class="twelve columns" style="text-align: center">
      <hr />
      <%- if controller_name != 'sessions' %>
        <%= link_to "Already have an account?", new_session_path(resource_name) %>
      <% end -%>
    </div>
  </div>
</div>


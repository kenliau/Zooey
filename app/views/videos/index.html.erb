<div class="row">
  <div class="twelve columns">
    <h2>All My Videos</h2>
    <hr />
  </div>
</div>

<script id="videoDetailsTemplate" type="text/template">
  <div class="title">
    <div class="row">
      <div class="one columns">
        <input id="checkbox-{{=id}}" name="selected_jobs[]" type="checkbox" value="{{=id}}">
      </div>
      <div class="three columns">
        <%= link_to '{{=video_name}}', 'videos/{{=id}}' %>
      </div>
      <div class="three columns">
        {{=size}}
      </div>
      <div class="three columns">
        {{=created_at}}
      </div>
      <div class="two columns">
        <%= link_to image_tag("trash.png"), 'videos/{{=id}}', method: :delete, data: { confirm: 'Are you sureyou want to destroy this video? All jobs associated with this video will be deleted as well.' } %>
      </div>
    </div>
  </div>

  <div class="content">
    <h6>All Jobs for {{=video_name}} : </h6>
    <ul class="block-grid three-up mobile-five-up">
      {{% _.each(jobs, function(i) { }}
        <li> <%= link_to "Job {{=i.id}}" , "jobs/{{=i.id}}" %></li>
      {{% }); }}

    </ul>
  </div>

</script>

<div>
  <div class="row">
    <div id="videos-table" class="twelve columns">
    </div>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <%= link_to 'Upload New Video', new_video_path, :class => "small radius button" %>
  </div>
<div>


</div>



<h1>Listing documentations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documentations.each do |documentation| %>
  <tr>
    <td><%= documentation.title %></td>
    <td><%= documentation.content %></td>
    <td><%= link_to 'Show', documentation %></td>
    <td><%= link_to 'Edit', edit_documentation_path(documentation) %></td>
    <td><%= link_to 'Destroy', documentation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

